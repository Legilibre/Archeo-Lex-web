{% if commits %}
{% for date, commit in commits %}
<table class="table table-striped commits">
    <thead>
        <tr>
            <th colspan="3">{{ date | date("j ") | replace({"1 ":"1er "}) }}{{ date | date("n") | replace({"1":"janvier","2":"février","3":"mars","4":"avril","5":"mai","6":"juin","7":"juillet","8":"août","9":"septembre","10":"octobre","11":"novembre","12":"décembre"}) }} {{ date | date("Y") }}</th>
        </tr>
    </thead>
    <tbody>
        {% for item in commit %}
        <tr>
            <td width="5%"><img src="https://gravatar.com/avatar/{{ item.author.email | lower | md5 }}?s=40" /></td>
            <td width="95%">
                <span class="pull-right"><a class="btn btn-default btn-sm" href="{{ path('commit', {repo: repo, commit: item.hash}) }}"><span class="fa fa-list-alt"></span> Voir {{ item.shortHash }}</a></span>
                <h4>{{ item.message }}</h4>
                <span>
                    <a href="mailto:{{ item.author.email }}">{{ item.author.name }}</a> a créé le {{ item.date | format_date }}
                    {% if item.author.email != item.commiter.email %}
                    &bull; <a href="mailto:{{ item.commiter.email }}">{{ item.commiter.name }}</a> a commité le {{ item.commiterDate | format_date }}
                    {% endif %}
                </span>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endfor %}
{% else %}
<p>Aucun résultat trouvé.</p>
{% endif %}

{% if page != 'searchcommits' %}
<ul class="pager">
    {% if pager.current != 0 %}
    <li class="previous">
        <a href="?page={{ pager.previous }}">&larr; Plus récent</a>
    </li>
    {% endif %}
    {% if pager.current != pager.last %}
    <li class="next">
        <a href="?page={{ pager.next }}">Plus ancien &rarr;</a>
    </li>
    {% endif %}
</ul>
{% endif %}
