{% extends 'layout_page.twig' %}

{% set page = 'stats' %}

{% block title %}GitList{% endblock %}

{% block content %}
    {% include 'breadcrumb.twig' with {breadcrumbs: [{dir: 'Statistiques', path:''}]} %}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th width="30%">Extensions de fichiers ({{ stats.extensions|length }})</th>
                <th width="40%">Auteurs ({{ authors|length }})</th>
                <th width="30%">Autre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <ul>
                    {% for ext, amount in stats.extensions %}
                        <li><strong>{{ ext }}</strong> : {{ amount }} fichiers</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                    {% for author in authors %}
                        <li><strong><a href="mailto:{{ author.email }}">{{ author.name }}</a></strong> : {{ author.commits }} versions</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <p>
                        <strong>Total en fichiers :</strong> {{ stats.files }}
                    </p>

                    <p>
                        <strong>Total en octets :</strong> {{ stats.size }} bytes ({{ stats.size | format_size }})
                    </p>
                </td>
            </tr>
        </tbody>
    </table>

    <hr />
{% endblock %}
