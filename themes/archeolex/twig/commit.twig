{% extends 'layout_page.twig' %}

{% set page = 'commits' %}

{% block title %}GitList{% endblock %}

{% block content %}
<h1>{{ repo | replace({'codes/': '', '\.git':'', '_':' '}) | capitalize }}</h1>
<hr />

    <div class="commit-view">
        <div class="commit-header">
            <h4>{{ commit.message }}</h4>
        </div>
        <div class="commit-body">
            {% if commit.body is not empty %}
            <p>{{ commit.body | nl2br }}</p>
            {% endif %}
        </div>
    </div>

    <ul class="commit-list">
        {% for diff in commit.diffs %}
            <li><i class="fa fa-file"></i> <a href="#diff-{{ loop.index }}">{{ diff.file }}</a> <span class="meta pull-right">{{ diff.index }}</span></li>
        {% endfor %}
    </ul>

    {% for diff in commit.diffs %}
    <div class="source-view">
        <div class="source-header">
            <div class="meta"><a id="diff-{{ loop.index }}">{{ diff.file }}</div>

            <div class="btn-group pull-right">
                <a href="{{ path('summaryrepo', {repo: (repo | replace({'.git': ''}))}) }}"  class="btn btn-default btn-sm"><span class="fa fa-list-alt"></span> Historique</a>
                <a href="{{ path('blob', {repo: repo, commitishPath: commit.hash ~'/' ~ diff.file}) }}"  class="btn btn-default btn-sm"><span class="fa fa-file"></span> Voir cette version</a>
            </div>
        </div>

        <div class="source-diff">
        <table>
        {% for line in diff.getLines %}
            <tr>
                <td class="lineNo">
                    {% if line.getType != 'chunk' %}
                        <a name="L{{ loop.index }}R{{ line.getNumOld }}"></a>
                        <a href="#L{{ loop.index }}R{{ line.getNumOld }}">
                    {% endif %}
                    {{ line.getNumOld }}
                    {% if line.getType != 'chunk' %}
                        </a>
                    {% endif %}
                </td>
                <td class="lineNo">
                    {% if line.getType != 'chunk' %}
                        <a name="L{{ loop.index }}L{{ line.getNumNew }}"></a>
                        <a href="#L{{ loop.index }}L{{ line.getNumNew }}">
                    {% endif %}
                    {{ line.getNumNew }}
                    {% if line.getType != 'chunk' %}
                        </a>
                    {% endif %}
                </td>
                <td style="width: 100%">
                    <pre{% if line.getType %} class="{{ line.getType }}"{% endif %}>{{ line.getLine }}</pre>
                </td>
            </tr>
        {% endfor %}
        </table>
        </div>
    </div>
    {% endfor %}

    <hr />
{% endblock %}
