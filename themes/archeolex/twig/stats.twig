{% extends 'layout_page.twig' %}

{% set page = 'stats' %}

{% block title %}GitList{% endblock %}

{% block content %}
    {% include 'breadcrumb.twig' with {breadcrumbs: [{dir: 'Statistiques', path:''}]} %}

    <table class="table stats">
        <thead>
            <tr>
                <th width="30%"><span class="fa fa-file-text"></span> Extensions de fichiers ({{ stats.extensions|length }})</th>
                <th width="40%"><span class="fa fa-users"></span> Auteurs ({{ authors|length }})</th>
                <th width="30%"><span class="fa fa-star"></span> Autre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <ul>
                    {% for ext, amount in stats.extensions %}
                        <li><strong>{{ ext }}</strong> : {{ amount }} fichiers</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                    {% for author in authors %}
                        <li><strong><a href="mailto:{{ author.email }}">{{ author.name }}</a></strong> : {{ author.commits }} commits</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <p>
                        <strong>Total en fichiers :</strong> {{ stats.files }}
                    </p>

                    <p>
                        <strong>Total en octets :</strong> {{ stats.size }} octets ({{ ((stats.size / 1024) / 1024) | number_format }} Mo)
                    </p>
                </td>
            </tr>
        </tbody>
    </table>

    <hr />
{% endblock %}
