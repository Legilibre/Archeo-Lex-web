{% extends 'layout.twig' %}
{% block title %}Liste des codes - Archéo Lex{% endblock %}

{% block body %}
{% include 'navigation.twig' %}

<div class="container">

    {% for repository in repositories %}
    <div class="repository">
        <div class="repository-header">
            <span class="fa fa-folder-open"></span>  <a href="{{ path('summaryrepo', {repo: repository.name | replace({'.git': ''})}) }}">{{ repository.name | replace({'codes/':''})[0:1] | upper }}{{ repository.name | replace({'codes/':''})[1:] | replace({'.git':'', '_':' ', 'E':'É', '\'':'’'}) }}</a>
        </div>
        {% if repository.description %}
        <div class="repository-body">
            <p>{{ repository.description }}</p>
        </div>
        {% endif %}
    </div>
    {% endfor %}

    <hr />

    {% include 'footer.twig' %}
</div>
{% endblock %}
